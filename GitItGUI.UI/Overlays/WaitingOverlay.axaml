<UserControl x:Class="GitItGUI.UI.Overlays.WaitingOverlay"
			xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:local="clr-namespace:GitItGUI.UI.Overlays"
			mc:Ignorable="d" 
			d:DesignHeight="400" d:DesignWidth="600">
	<Border BorderBrush="Orange" BorderThickness="4">
		<Grid Background="#EE000000">
			<Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="32" FontWeight="Bold" Width="256" Height="64" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">Waiting...</Label>
		</Grid>
	</Border>
</UserControl>
