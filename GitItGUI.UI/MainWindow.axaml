<Window x:Class="GitItGUI.UI.MainWindow"
		xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:screens="clr-namespace:GitItGUI.UI.Screens"
		xmlns:overlays="clr-namespace:GitItGUI.UI.Overlays"
		Title="Git-It-GUI" Width="800" Height="500" MinWidth="800" MinHeight="500">
	<Grid>
		<!-- Screens -->
		<screens:StartScreen x:Name="startScreen" IsVisible="True"/>
		<screens:RepoScreen x:Name="repoScreen" IsVisible="False"/>
		<screens:SettingsScreen x:Name="settingsScreen" IsVisible="False"/>
		<screens:CloneScreen x:Name="cloneScreen" IsVisible="False"/>
		<screens:CreateScreen x:Name="createScreen" IsVisible="False"/>

		<!-- Overlays -->
		<overlays:MergeConflictOverlay x:Name="mergingOverlay" IsVisible="False"/>
		<overlays:NameEntryOverlay x:Name="nameEntryOverlay" IsVisible="False"/>
		<overlays:ProcessingOverlay x:Name="processingOverlay" IsVisible="False"/>
		<overlays:MessageOverlay x:Name="messageOverlay" IsVisible="False"/>
		<overlays:WaitingOverlay x:Name="waitingOverlay" IsVisible="False"/>
	</Grid>
</Window>
