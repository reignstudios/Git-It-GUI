<UserControl x:Class="GitItGUI.UI.Screens.RepoTabs.TerminalTab"
			xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:local="clr-namespace:GitItGUI.UI.Screens.RepoTabs"
			mc:Ignorable="d" 
			d:DesignHeight="400" d:DesignWidth="600">
	<Grid>
		<TextBox Name="terminalTextBox" Margin="10,10,10,38" IsReadOnly="True" AcceptsReturn="True"/><!--HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"-->
		<Button Name="runCmdButton" Content="Run Cmd >" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="runCmdButton_Click"/>
		<TextBox Name="cmdTextBox" Height="20" Margin="90,0,10,10" VerticalAlignment="Bottom"/>
	</Grid>
</UserControl>
